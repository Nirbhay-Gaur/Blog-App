<%- include("./partials/header") %>

<div class="ui container main segment text">
    <div class="ui huge header center aligned">New Blog</div>
    <form class="ui form" action="/blogs" method="POST" autocomplete="off">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" id="title" placeholder="Blog Title" required>
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="blog[image]" id="image" placeholder="Image URL">
        </div>
        <div class="field">
            <label for="body">Blog Content</label>
            <textarea name="blog[body]" placeholder="Blog content goes here..." id="body" rows="5" required></textarea>
        </div>
        <a class="ui floated left red inverted button animated" href="/blogs">
            <span class="visible content">Cancel</span>
            <span class="hidden content"><i class="left arrow icon"></i></span>
        </a>
        <button class="ui floated right inverted green animated button">
            <span class="visible content">Create</span>
            <span class="hidden content"><i class="check icon"></i></span>
        </button>
    </form>
</div>

<%- include("./partials/footer") %>
