<%- include("./partials/header") %>

<div class="ui container main segment text">
    <div class="ui huge header center aligned">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST" autocomplete="off">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" id="title" value = "<%= blog.title %>" required>
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="blog[image]" id="image" value = "<%= blog.image %>">
        </div>
        <div class="field">
            <label for="body">Blog Content</label>
            <textarea name="blog[body]" id="body" rows="5" required><%= blog.body %></textarea>
        </div>
        <button class="ui floated right inverted green animated fade button">
            <span class="visible content">Save Changes</span>
            <span class="hidden content"><i class="check icon"></i></span>
        </button>
    </form>
</div>


<%- include("./partials/footer") %>